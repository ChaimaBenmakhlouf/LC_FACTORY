{% extends 'base.html.twig' %}

{% block title %}CompanyInformation index{% endblock %}

{% block body %}
    <h1>CompanyInformation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>Logo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company_information in company_informations %}
            <tr>
                <td>{{ company_information.id }}</td>
                <td>{{ company_information.name }}</td>
                <td>{{ company_information.address }}</td>
                <td>{{ company_information.logo }}</td>
                <td>
                    <a href="{{ path('company_information_show', {'id': company_information.id}) }}">show</a>
                    <a href="{{ path('company_information_edit', {'id': company_information.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('company_information_new') }}">Create new</a>
{% endblock %}
